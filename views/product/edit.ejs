<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">ویرایش: <%= product.Name %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">

  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/product/">محصول </a></li>
          <li class="breadcrumb-item active"><%= product.Name %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>آخرین آپدیت: <%= new Date(product.updatedAt).toUTCString()  %></b>
      <b>شناسه محصول:</b> <%= product._id %>
    </div>
  </div>

</div>


<form action="/admin/product/edit/<%= product._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">


    <div class="col">
      <label for="picture">آدرس تصویر</label>
      <input type="text" class="form-control" id="picture" name="picture" value="<%= product.Picture %>" placeholder="آدرس تصویر  محصول" required>
    </div>

    <div class="col">
      <label for="name">نام محصول</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= product.Name %>" placeholder="نام  محصول" required>
    </div>

    
  </div>
  <div class="row form-group mb-4">
    <div class="col">
      <label for="price">قیمت</label>
      <input type="text" class="form-control" id="price" name="price" value="<%= product.Price %>" placeholder=" قیمت" required>
    </div>
    <div class="col">
      <label for="category">دسته بندی</label>
      <select name="category" id="category" class="form-select">
        <option value="<%= product.Category %>"><%= product.Category %></option>
        <% categories.forEach(element => { %>
          <option value="<%= element.Name %>"><%= element.Name %></option>
          <% }) %>
      </select>
    </div>
  
      </div>  

  <div class="row form-group mb-4">
    <div class="col">
      <label for="picturealt">Picture Alt</label>
      <input type="text" class="form-control" id="picturealt" name="picturealt" value="<%= product.PictureAlt %>" placeholder="Picture Alt" required>
    </div>

    <div class="col">
      <label for="picturetitle">Picture Title</label>
      <input type="text" class="form-control" id="picturetitle" name="picturetitle" value="<%= product.PictureTitle %>" placeholder="Picture Title" required>
    </div>
  </div>

  <div class="form-group mb-4">
    <label for="details">توضیحات </label>
    <textarea class="form-control" name="description" id="description" cols="30" rows="12" placeholder="توضیحات"></textarea>
</div>


  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">آپدیت دسته بندی</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">حذف دسته بندی</button>

  </div>

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">شما قصد حذف این محصول را دارید؟</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
           شما در حال حذف محصول با نام هستید<b class="fw-bold"><%= product.Name %> </b><br/>
          آیا مطمئن هستید؟
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
        <form action="/admin/product/edit/<%= product._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">بله حذف شود</button>
        </form>
      </div>
    </div>
  </div>
</div>