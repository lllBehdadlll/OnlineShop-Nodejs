<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editing: <%= productslider.Name %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/productslider/">اسلایدر محصولات</a></li>
          <li class="breadcrumb-item active"><%= productslider.Name %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Last Updated: <%= new Date(productslider.updatedAt).toUTCString()  %></b>
      <b>UserId:</b> <%= productslider._id %>
    </div>
  </div>

</div>


<form action="/admin/productslider/edit/<%= productslider._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    

    <div class="col">
      <label for="name">عنوان</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= productslider.Name %>" placeholder="عنوان" required>
    </div>

   
      <div class="col">
        <label for="description"> توضیحات</label>
        <input type="text" class="form-control" id="description" name="description" value="<%= productslider.Description %>" placeholder="توضیحات" required>
      </div>

  </div>



      <div class="col">
        <label for="category">دسته بندی</label>
        <select name="category" id="category" class="form-select">
          <option value="<%= productslider.Category %>"><%= productslider.Category %></option>
          <% categories.forEach(element => { %>
            <option value="<%= element.Name %>"><%= element.Name %></option>
            <% }) %>
        </select>
      </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">آپدیت دسته بندی</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">حذف دسته بندی</button>

  </div>

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">شما قصد حذف این دسته بندی را دارید؟</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
           شما در حال حذف دسته بندی با نام هستید<b class="fw-bold"><%= productslider.Name %> </b><br/>
          آیا مطمئن هستید؟
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
        <form action="/admin/productslider/edit/<%= productslider._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">بله حذف شود</button>
        </form>
      </div>
    </div>
  </div>
</div>