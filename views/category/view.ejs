<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= category.Name  %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
  </div>
</div>

<div class="col py-3">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/category/">دسته بندی</a></li>
          <li class="breadcrumb-item active"><%= category.Name  %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>آخرین آپدیت<%= new Date(category.updatedAt).toUTCString() %> </b>
      <b>شماره دسته بندی:</b> <%= category._id %>
    </div>
  </div>

</div>

<ul class="list-group">

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>نام:</b></div>
      <div class="col"><%= category.Name %></div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>تصویر:</b></div>
      <div class="col"><img src="<%= category.Picture %>"></div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Picture Alt:</b></div>
      <div class="col"><%= category.PictureAlt %></div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Picture Title:</b></div>
      <div class="col"><%= category.PictureTitle %></div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>تاریخ ایجاد:</b></div>
      <div class="col"><%= category.createdAt %></div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>آخرین اپدیت:</b></div>
      <div class="col"><%= category.updatedAt %></div>
    </div>
  </li>

</ul>